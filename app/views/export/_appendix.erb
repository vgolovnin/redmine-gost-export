<%
  files = []
  appendix.attachments.each { |attachment|
    files << {filename: attachment.filename, title: attachment.description}
    FileUtils.cp attachment.diskfile, File.join(pwd, attachment.filename)
  }
%>
\newpage
\pagestyle{uspd}
\begin{flushright}
\textbf{ПРИЛОЖЕНИЕ<%= " #{index}" unless index.zero? %>}
\end{flushright}
\section*{<%= latex appendix.title %>}
\addcontentsline{toc}{section}{Приложение <%= latex appendix.title %>}

<%= raw latex appendix.text, files: files %>