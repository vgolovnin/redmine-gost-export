<div id="signer_<%= signer.id %>">

<%= form_for [@project, signer], method: 'patch', remote: true do |f| %>
  <p>
    <%= f.label :name, 'Фамилия, инициалы' %>
    <%= f.text_field :name %>
  </p>
   <p>
     <%= f.label :position, 'Должность' %>
     <%= f.text_area :position %>
   </p>
    <p>
      <%= f.label :role %>
      <%= f.select :role, [['Согласовано', 1], ['Утверждаю', 2], ['Исполнитель', 3]] %>
    </p>
    <p>
      <%= f.submit %><%= link_to 'Удалить', [@project, signer], method: 'delete', remote: true, class: 'icon icon-del' %>
    </p>
<% end %>
</div>