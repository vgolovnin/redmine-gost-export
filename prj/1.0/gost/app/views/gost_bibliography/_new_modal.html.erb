<%= form_for @bib, url: {action: 'create'} do |f| %>
    <p>
      Добавьте запись в формате BibTeX
      <%= f.text_area :text, style: 'width: 300px; height: 170px;' %>
    </p>
    <p>
      или загрузите файл *.bib
      <%= f.file_field :bib_file %>
    </p>

    <%= f.submit 'Добавить' %>
<% end %>