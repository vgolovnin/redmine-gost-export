<h3>Информация о проекте</h3>

<%= form_for @info, url: project_gost_info_path, method: :put do |f| %>
    <p>
      Название проекта<br>
      <%= f.text_area :title, cols: 100, rows: 4%>
    </p>

    <p>
      Организация-разработчик<br>
      <%= f.text_area :organization, cols: 100, rows: 4 %>
    </p>

    <p>
      Подразделение организации <br>
      <%= f.text_area :organization_unit, cols: 100, rows: 4  %>
    </p>

    <p>
      Код организации <br>
      <%= f.text_field :organization_code %>
    </p>

    <p>
      Код страны <br>
      <%= f.text_field :country_code %>
    </p>

    <p>
      Код ОКП <br>
      <%= f.text_field :okp_code %>
    </p>

    <p>
      Специальная отметка <br>
      <%= f.text_field :special_mark %>
    </p>

 <% if @project.gost_info %>
<p>
  <%= link_to 'Подписывающие лица', project_signers_path, remote: true %>
</p>
<% end %>

    <%= f.submit 'Сохранить' %>
<% end %>

<% content_for :sidebar do %>
    <% render partial: 'gost_plugin/sidebar' %>
<% end %>